<Window x:Class="DirFileStats.UserInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DirFileStats.UserInterface"
        mc:Ignorable="d"
        Title="Difist - the only statistic app you will ever need" Height="475.21" Width="804.134" ResizeMode="NoResize" Icon="Images/49116.png">
    <Grid Margin="0,0,0,1">
        <TextBox x:Name="tbxFilePath" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="194,33,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="509"/>
        <Button x:Name="btnChooseFile" Content="Choose file" HorizontalAlignment="Left" Margin="32,33,0,0" VerticalAlignment="Top" Width="157" Height="23" Click="btnChooseFile_Click"/>

        <TextBox x:Name="tbxDirPath" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="194,61,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="509"/>
        <Button x:Name="btnChooseDir" Content="Choose directory" HorizontalAlignment="Left" Margin="32,61,0,0" VerticalAlignment="Top" Width="157" Height="23" Click="btnChooseDir_Click"/>

        <GroupBox Header="The Statistics" HorizontalAlignment="Left" Height="283" Margin="32,119,0,0" VerticalAlignment="Top" Width="509" Foreground="#FF9B9B9B">
            <Grid x:Name="tbxCreationTime" Margin="0,0,0,-12">
                <Label Content="Type:" HorizontalAlignment="Left" Margin="10,27,0,0" VerticalAlignment="Top" ToolTip="The type which is selected, e.g. file, directory"/>
                <Label Content="Name:" HorizontalAlignment="Left" Margin="10,58,0,0" VerticalAlignment="Top" ToolTip="The name of the selected directory or file"/>
                <Label Content="File size:" HorizontalAlignment="Left" Margin="10,89,0,0" VerticalAlignment="Top" ToolTip="The size of the currently selected files, doesn't work with directories"/>
                <Label Content="File extension:" HorizontalAlignment="Left" Margin="10,120,0,0" VerticalAlignment="Top" ToolTip="Displays the extension of the current selected file"/>
                <Label x:Name="lblFileCount" HorizontalAlignment="Left" Margin="10,151,0,0" VerticalAlignment="Top" Height="26" Width="158" Content="Number of files in directory:" ToolTip="Only works if a directory is selected"/>
                <Label x:Name="lblType" Content="n/a" HorizontalAlignment="Left" Margin="173,27,0,0" VerticalAlignment="Top"/>
                <Label x:Name="lblName" Content="n/a" HorizontalAlignment="Left" Margin="173,58,0,0" VerticalAlignment="Top"/>
                <Label x:Name="lblFileSize" Content="n/a" HorizontalAlignment="Left" Margin="173,89,0,0" VerticalAlignment="Top"/>
                <Label x:Name="lblFileExtension" Content="n/a" HorizontalAlignment="Left" Margin="173,120,0,0" VerticalAlignment="Top"/>
                <Label x:Name="lblNumberOfFiles" Content="n/a" HorizontalAlignment="Left" Margin="173,151,0,0" VerticalAlignment="Top"/>
                <Label Content="Creation Time:" HorizontalAlignment="Left" Margin="10,182,0,0" VerticalAlignment="Top" ToolTip="Creation time for the current selected file; can be changed to UTC"/>
                <Label Content="Last Modified:" HorizontalAlignment="Left" Margin="10,213,0,0" VerticalAlignment="Top" ToolTip="Last modified time for the current selected file; can be changed to UTC"/>
                <Label x:Name="lblCreationTime" Content="n/a" HorizontalAlignment="Left" Margin="173,182,0,0" VerticalAlignment="Top"/>
                <Label x:Name="lblDataSize" Content="" HorizontalAlignment="Left" Margin="220,89,0,0" VerticalAlignment="Top"/>
                <Label x:Name="lblLastModified" Content="n/a" HorizontalAlignment="Left" Margin="173,213,0,0" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>
        <Image x:Name="imgIcon" HorizontalAlignment="Left" Height="122" Margin="577,131,0,0" VerticalAlignment="Top" Width="126" Source="Images\49116.png" />
        <CheckBox x:Name="cbxAdvSearch" Content="Include Sub-Folder Content" HorizontalAlignment="Left" Margin="32,94,0,0" VerticalAlignment="Top" Height="25" Width="185" IsEnabled="False" Click="cbxAdvSearch_Click"/>
        <CheckBox x:Name="cbxModUTC" Content="Modified time as UTC" HorizontalAlignment="Left" Margin="222,94,0,0" VerticalAlignment="Top" IsEnabled="False" Click="cbxModUTC_Click"/>


    </Grid>
</Window>
